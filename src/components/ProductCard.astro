---
import type { Product } from '../types';

export interface Props {
  product: Product;
}

const { product } = Astro.props;
---

<a href={`/products/${product.id}`} class="group block overflow-hidden rounded-lg border border-gray-200 shadow-sm transition-all duration-300 hover:shadow-xl hover:scale-105">
  <img
    src={product.imageUrl}
    alt={`Image of ${product.name}`}
    class="h-[350px] w-full object-cover"
  />

  <div class="relative bg-white p-4">
    <h3 class="text-base text-gray-800 group-hover:underline group-hover:underline-offset-4">
      {product.name}
    </h3>

    <p class="mt-2">
      <span class="tracking-wider text-gray-900 font-medium">${product.price}</span>
    </p>
  </div>
</a>