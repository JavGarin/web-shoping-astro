---
import { ViewTransitions } from 'astro:transitions';
import '../styles/globals.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="TheCountryHouse E-Commerce" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/countryhousechile.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="bg-cream-beige">
    <Header />
    <main class="mx-auto max-w-screen-xl px-4 py-8 sm:px-6 sm:py-12 lg:px-8 opacity-0 pt-24">
      <slot />
    </main>
    <Footer />
    <script>
      import '../lib/animations.ts';
    </script>
  </body>
</html>