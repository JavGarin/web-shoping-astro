---
export const prerender = false;
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact Us - TheCountryHouse">
  <div class="mx-auto max-w-lg text-center">
    <h1 class="text-4xl font-bold">Contact Us</h1>
    <p class="mt-4 text-lg text-charcoal-gray">
      Have a question? We'd love to hear from you. Reach out to us via the form below.
    </p>
  </div>

  <form action="#" class="mx-auto mt-8 mb-0 max-w-md space-y-4">
    <div>
      <label for="name" class="sr-only">Name</label>
      <div class="relative">
        <input
          type="text"
          class="w-full rounded-lg border-earth-brown p-4 pe-12 text-sm shadow-sm"
          placeholder="Enter your name"
        />
      </div>
    </div>

    <div>
      <label for="email" class="sr-only">Email</label>
      <div class="relative">
        <input
          type="email"
          class="w-full rounded-lg border-earth-brown p-4 pe-12 text-sm shadow-sm"
          placeholder="Enter email"
        />
      </div>
    </div>

    <div>
      <label for="message" class="sr-only">Message</label>
      <div class="relative">
        <textarea
          class="w-full rounded-lg border-earth-brown p-4 pe-12 text-sm shadow-sm"
          placeholder="Enter your message"
          rows="4"
        ></textarea>
      </div>
    </div>

    <div class="flex items-center justify-between">
      <button
        type="submit"
        class="inline-block rounded-lg bg-forest-green px-5 py-3 text-sm font-medium text-cream-beige"
      >
        Send Message
      </button>
    </div>
  </form>
</Layout>